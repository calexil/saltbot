{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist/js",
    "allowJs": true,
    "module": "ES2015",
    "moduleResolution": "Node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}